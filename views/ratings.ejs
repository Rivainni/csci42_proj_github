<%- include("navbar.ejs", {active_username})%>
<h1> Ratings Page</h1>

<% for (i = 0; i < ratingData.length; i++) { %>
<% var mediaTypeParse = '' %>
<% if (ratingData[i].media_type == "M") { mediaTypeParse = 'movie' } else if (ratingData[i].media_type == "T") {mediaTypeParse = 'tv'} else {mediaTypeParse = 'episode'}%> 

<div class="row">

<div class="col-md-4">
<div class="card">
    <% if (mediaData[i].poster_path) {var image_link = "https://image.tmdb.org/t/p/original" + mediaData[i].poster_path %>
    <% } else {var image_link = "https://image.tmdb.org/t/p/original" + mediaData[i].still_path} %>
    <img class="img-fluid" src=<%= image_link %> alt="No image available">

    <div class="card-body">
    <p class="card-text text-center"><small class="btn btn-danger" style="pointer-events: none">
        <%= mediaTypeParse %></small></p>
    

    <%      if (mediaTypeParse == 'tv') { %>
        <h5 class="card-title"><%= mediaData[i].name %></h5>
        <% var year = (new Date(mediaData[i].first_air_date)).getFullYear(); %>
    <% }    else if (mediaTypeParse == 'movie' ) { %>
        <h5 class="card-title"><%= mediaData[i].title %></h5>
        <% var year = (new Date(mediaData[i].release_date)).getFullYear(); %>
    <% }    else if (mediaTypeParse == 'episode') {%>
            <h5 class="card-title"><%= mediaData[i].name %></h5>
            <% var year = (new Date(mediaData[i].air_date)).getFullYear();} %>
        <p class="card-text"><%= year %></p>
        <p class="card-text">Rating: <%= ratingData[i].score%></p>

    <p class="card-text">
        <div class="btn-group">
            <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#ListModal<%= ratingData[i].media_id %>"> 
                Add To List 
            </button>    
            <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#HistoryModal<%= ratingData[i].media_id %>"> 
                Watched 
            </button> 
            <button class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#RatingMediaModal<%= ratingData[i].media_id %>"> 
            Delete From Rating
            </button>       
                <!-- Delete Media From Rating Modal -->
                <div class="modal fade" id="RatingMediaModal<%= ratingData[i].media_id %>" tabindex="-1" role="dialog" aria-labelledby="RatingMediaModalLabel<%= ratingData[i].media_id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="RatingMediaModalLabel<%= ratingData[i].media_id %>">Confirm Delete</h5>                                          
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this media from Rating %>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/ratings/deleteMediaFromRating" method="post" name="deleteMediaRatingForm<%= ratingData[i].media_id %>">
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <input type="hidden" name="userName" value="<%= active_username %>" class="visually-hidden">
                    <input type="hidden" name="media_id" value="<%= ratingData[i].media_id %>" class="visually-hidden">
                    </form>
                </div>
                </div>
                </div>
                </div> <!-- Delete Media from Rating Modal -->


                <!-- List Modal -->
                <div class="modal fade" id="ListModal<%= ratingData[i].media_id %>" tabindex="-1" role="dialog" aria-labelledby="ListModalLabel<%= ratingData[i].media_id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ListModalLabel<%= ratingData[i].media_id %>">Add to watched?</h5>                                          
                </div>
                        <div class="modal-body">
                            <form action="/lists/addMediaToList" method="post" >
                                <label for="addMediaToList">Select list to add media:</label>
                                <select class="form-control" name = "list_id" id="addMediaToList" >
                              <% for (j = 0; j < allLists.length; j++) {%>
                                  <option value = "<%= allLists[j].list_id %>"><%= allLists[j].list_name %></option>
                              <% } %>
                                </select>
                            <% if (ratingData[i].media_type == 'M') { %>
                                <input type="hidden" name="media_type" value="M" class="visually-hidden">
                                <input type="hidden" name="season_no" value="-1" class="visually-hidden">
                                <input type="hidden" name="episode_no" value="-1" class="visually-hidden">
                                <% } else if (ratingData[i].media_type == 'T') { %>
                                <input type="hidden" name="media_type" value="T" class="visually-hidden">
                                <input type="hidden" name="season_no" value="-1" class="visually-hidden">
                                <input type="hidden" name="episode_no" value="-1" class="visually-hidden">
                                <% } else { %>
                                <input type="hidden" name="media_type" value="E" class="visually-hidden">
                                <input type="hidden" name="season_no" value="<%= ratingData[i].season_no %>" class="visually-hidden">
                                <input type="hidden" name="episode_no" value="<%= ratingData[i].episode_no %>" class="visually-hidden">
                                <% } %>
                                <input type="hidden" name="userName" value="<%= active_username %>" class="visually-hidden">
                                <input type="hidden" name="tmdb_id" value="<%= ratingData[i].tmdb_id %>" class="visually-hidden">
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Yes</button>
                            </form>  
                        </div>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- History Modal -->
                <div class="modal fade" id="HistoryModal<%= ratingData[i].media_id %>" tabindex="-1" role="dialog" aria-labelledby="HistoryModalLabel<%= ratingData[i].media_id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="HistoryModalLabel<%= ratingData[i].media_id %>">Add to Watched?</h5>                                          
                </div>
                <div class="modal-body">
                    Would you like to track this item as watched?
                    <form action="/history/addMediaToHistory" method="post" >
                    <div class="form-group">
                      <% if (ratingData[i].media_type == 'M') { %>
                        <input type="hidden" name="media_type" value="M" class="visually-hidden">
                        <input type="hidden" name="season_no" value="-1" class="visually-hidden">
                        <input type="hidden" name="episode_no" value="-1" class="visually-hidden">
                        <% } else if (ratingData[i].media_type == 'T') { %>
                        <input type="hidden" name="media_type" value="T" class="visually-hidden">
                        <input type="hidden" name="season_no" value="-1" class="visually-hidden">
                        <input type="hidden" name="episode_no" value="-1" class="visually-hidden">
                        <% } else { %>
                        <input type="hidden" name="media_type" value="E" class="visually-hidden">
                        <input type="hidden" name="season_no" value="<%= ratingData[i].season_no %>" class="visually-hidden">
                        <input type="hidden" name="episode_no" value="<%= ratingData[i].episode_no %>" class="visually-hidden">
                        <% } %>
                        <input type="hidden" name="userName" value="<%= active_username %>" class="visually-hidden">
                        <input type="hidden" name="tmdb_id" value="<%= ratingData[i].tmdb_id %>" class="visually-hidden">
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes</button>
                    </form>  
                </div>
                </div>
                </div>
                </div>
</div> <!-- Button Group -->




</div>
</div>
</div>
</div>

</div>
<% } %>
</div>



<%- include("footer.ejs")%>